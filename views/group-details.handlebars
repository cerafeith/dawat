<section class="container mt-2">
    <h1 class="bd-title" id="content">{{group.name}}</h1>

    <div class="my-4"></div>
    {{!-- <h6 class="font-weight-bold">Users</h6> --}}
    <div class="d-md-flex align-items-center justify-content-between mb-4">
        <h6 class="font-weight-bold">Users</h6>
        <input type="text" value="{{inviteLink}}" id="groupLink">
        <button class="btn btn-primary btn-sm" onclick="copyText()">Copy Link</button>
    </div>

    <h6 class="font-weight-bold">Event</h6>
    {{#if recentEvent }}
        {{recentEvent.startDate}} - {{recentEvent.endDate}}
    {{else}}
    <h6 class="font-weight-bold">Create a new event</h6>
    <form action="/groups/{{group.id}}/event/new" method="POST" >
        <div class="form-check">
            <input class="form-check-input" type="radio" name="numberOfDays" id="numberOfDays1" value="7" checked>
            <label class="form-check-label" for="numberOfDays1">
                1 Weeks
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="numberOfDays" id="numberOfDays2" value="14">
            <label class="form-check-label" for="numberOfDays2">
                2 Weeks
            </label>
        </div>
        <button class="btn btn-primary btn-sm  mt-2">Create Event</button>
    </form>
    {{/if}}

    <div class="my-5"></div>

    <h6 class="font-weight-bold">Users</h6>
    <ul class="list-group">
        {{#each group.users}}
        <li class="list-group-item d-flex justify-content-between align-items-center">
            {{this.username}}
        </li>
        {{/each}}
    </ul>
</section>